<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/gradientbackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textColor="@color/colorAccent"
            android:text="@string/title_fragment_profile"
            android:textAlignment="center"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/Profile_Pic"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/profile_pic"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/almostWhite"
            android:text="@string/nome_do_usuario"
            android:textSize="30sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/Email"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/email_image"
            android:textAlignment="center"
            app:srcCompat="@drawable/email_icon" />

        <TextView
            android:id="@+id/textUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/Email"
            android:text="@string/email_do_usuario"
            android:textSize="24sp" />


        <LinearLayout
            android:id="@+id/idLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textUserEmail"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/userID"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="0.5"
                android:text="@string/ID"
                android:textSize="15pt" />

            <TextView
                android:id="@+id/textUserID"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="@string/id_do_usu_ario"
                android:textSize="15pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idLinearLayout"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_gravity="top">
            <Button
                android:id="@+id/buttonAlterarCredenciais"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/buttonColor"
                android:textColor="@color/colorAccent"
                android:text="@string/alterar_credenciais" />

            <Button
                android:id="@+id/buttonInviteFriends"
                android:layout_width="20dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.5"
                android:background="@color/buttonColor"
                android:textColor="@color/colorAccent"
                android:text="@string/convidar_amigo" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>