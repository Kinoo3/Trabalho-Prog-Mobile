<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textSize="15pt"
        android:text="Pergunta 1"/>

    <TextView
        android:id="@+id/questionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lessonSubject"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15pt"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Aqui vai a pergunta"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="15dp">
        
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/answerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternativa A"
                android:layout_margin="5dp"
                />
            <RadioButton
                android:id="@+id/answerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternativa B"
                android:layout_margin="5dp"
                />
            <RadioButton
                android:id="@+id/answerC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternativa C"
                android:layout_margin="5dp"
                />
            <RadioButton
                android:id="@+id/answerD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternativa D"
                android:layout_margin="5dp"
                />
            <RadioButton
                android:id="@+id/answerE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alternativa E"
                android:layout_margin="5dp"
                />
        </RadioGroup>

    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/previousQuestionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@color/design_default_color_primary"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:visibility="invisible"
            android:text="ANTERIOR"/>

        <Button
            android:id="@+id/nextQuestionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:background="@color/design_default_color_primary"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:text="PRÃ“XIMA"/>
    </LinearLayout>
</LinearLayout>